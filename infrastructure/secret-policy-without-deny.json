{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowLambdaAndDeploymentRead",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::654654307503:role/naver-sms-automation-ci-role",
          "arn:aws:iam::654654307503:role/naver-sms-automation-lambda-role"
        ]
      },
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowDeploymentWrite",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::654654307503:role/naver-sms-automation-ci-role"
      },
      "Action": [
        "secretsmanager:UpdateSecret",
        "secretsmanager:UntagResource",
        "secretsmanager:TagResource",
        "secretsmanager:PutSecretValue"
      ],
      "Resource": "*"
    }
  ]
}
